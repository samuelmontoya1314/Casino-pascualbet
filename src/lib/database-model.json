
{
  "schema": {
    "description": "Define la estructura de un objeto de Usuario en la base de datos.",
    "type": "object",
    "properties": {
      "id": { "type": "string", "description": "Identificador único del usuario (ej. 'pascual', 'admin')." },
      "name": { "type": "string", "description": "Nombre completo para mostrar." },
      "birthDate": { "type": "string", "description": "Fecha de nacimiento (formato YYYY-MM-DD)." },
      "nationality": { "type": "string", "description": "Nacionalidad del usuario." },
      "documentNumber": { "type": "string", "description": "Número del documento de identidad." },
      "role": { "type": "string", "enum": ["admin", "user"], "description": "Rol del usuario en el sistema." },
      "balance": { "type": "number", "description": "Saldo disponible del usuario en la billetera." }
    },
    "required": ["id", "name", "role", "balance"]
  },
  "sampleData": [
    {
      "id": "admin",
      "name": "Admin User",
      "role": "admin",
      "balance": 10000
    },
    {
      "id": "pascual",
      "name": "Pascual Bet",
      "role": "user",
      "balance": 500
    },
    {
      "id": "usuario",
      "name": "Usuario de Prueba",
      "role": "user",
      "balance": 1000
    }
  ]
}
